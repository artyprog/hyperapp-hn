{
  "version": "1.0.0",
  "name": "hyperapp-hn",
  "description": "A hackernews PWA built with HyperApp",
  "author": "Luke Jackson (lukejacksonn@gmail.com)",
  "license": "MIT",
  "main": "src/index.js",
  "output": "dist",
  "watch": {
    "static": {
      "patterns": "static",
      "extensions": "*",
      "quiet": true
    },
    "bundle": {
      "patterns": "src",
      "extensions": "*",
      "quiet": true
    },
    "server": {
      "patterns": "package.json",
      "quiet": true
    }
  },
  "scripts": {
    "static": "ncp static dist",
    "bundle": "rollup -c -i src/index.js -o dist/index.js",
    "server": "http-server-spa dist",
    "build": "npm run static && npm run bundle",
    "start": "npm-watch"
  },
  "devDependencies": {
    "http-server-spa": "^1.2.0",
    "ncp": "^2.0.0",
    "npm-watch": "^0.1.9",
    "postcss-nested": "^2.1.2",
    "rollup": "^0.41.4",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.2.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-postcss": "^0.5.4",
    "rollup-plugin-uglify": "^2.0.1"
  },
  "dependencies": {
    "@hyperapp/router": "^0.2.3",
    "hyperapp": "0.12.0"
  }
}
